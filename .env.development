# This is for LOCAL DEVELOPMENT ONLY
# AI agents will use these values
# DO NOT put real AWS credentials here

NODE_ENV=development
AWS_REGION=us-east-1
ENVIRONMENT=development
DATABASE_NAME=community_content
VPC_NAT_GATEWAYS=1

# Local Database (will use Docker)
DATABASE_URL=postgresql://postgres:localpassword@localhost:5432/content_hub_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT_MS=30000
DATABASE_POOL_CONNECTION_TIMEOUT_MS=60000

# Cache
REDIS_URL=redis://localhost:6379

# Mock values for local development
COGNITO_USER_POOL_ID=local-mock-pool
COGNITO_CLIENT_ID=local-mock-client
COGNITO_REGION=us-east-1
COGNITO_CALLBACK_URLS=http://localhost:3000/callback
COGNITO_LOGOUT_URLS=http://localhost:3000/logout
TOKEN_VERIFICATION_TIMEOUT_MS=3000
MFA_TOTP_SEED=TESTMFASEED123456
AUTH_RATE_LIMIT_PER_MINUTE=1000

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_ALLOW_HEADERS=Authorization,Content-Type
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_MAX_AGE=600
CORS_CREDENTIALS=true

# Feature flags
ENABLE_BETA_FEATURES=false

# Rate limiting
RATE_LIMIT_ANONYMOUS=100
RATE_LIMIT_AUTHENTICATED=1000
RATE_LIMIT_WINDOW_MINUTES=1
STATS_CACHE_TTL=60
ANALYTICS_RETENTION_DAYS=730
API_GW_THROTTLE_RATE_LIMIT=100
API_GW_THROTTLE_BURST_LIMIT=200
API_GW_DATA_TRACE_ENABLED=true

# Synthetic monitoring
SYNTHETIC_URL=http://localhost:3000

# These will be empty for AI agents
YOUTUBE_API_KEY=
GITHUB_TOKEN=
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=amazon.titan-embed-text-v1

# Local development
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_COGNITO_CLIENT_ID=local-mock-client
NEXT_PUBLIC_COGNITO_USER_POOL_ID=local-mock-pool
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_FEEDBACK_URL=https://awscommunityhub.org/beta-feedback
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
