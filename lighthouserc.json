{
  "ci": {
    "collect": {
      "startServerCommand": "npm run start --workspace=src/frontend -- --port 4177",
      "startServerReadyPattern": "Ready in",
      "numberOfRuns": 2,
      "url": [
        "http://127.0.0.1:4177/",
        "http://127.0.0.1:4177/dashboard",
        "http://127.0.0.1:4177/dashboard/search"
      ]
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "categories:accessibility": [
          "warn",
          {
            "minScore": 0.9
          }
        ],
        "categories:best-practices": [
          "warn",
          {
            "minScore": 0.9
          }
        ],
        "categories:seo": [
          "warn",
          {
            "minScore": 0.9
          }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "reports/lighthouse"
    }
  }
}
