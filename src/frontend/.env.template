# ===================================
# Frontend Environment Configuration
# ===================================
# Copy this file to .env.local for local development
# For production, set these in your deployment environment

# API Configuration (REQUIRED)
# The backend API endpoint URL
# Local development: http://localhost:3001
# Production: Your deployed API Gateway URL
NEXT_PUBLIC_API_URL=http://localhost:3001

# Site Configuration (REQUIRED)
# The public URL of your frontend application
# Used for canonical URLs and Open Graph metadata
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Image Optimization (OPTIONAL)
# Base URL for image CDN or optimization service (e.g., CloudFront image handler)
NEXT_PUBLIC_IMAGE_CDN_URL=

# AWS Cognito Configuration (OPTIONAL)
# Required only if using Cognito authentication
NEXT_PUBLIC_COGNITO_USER_POOL_ID=
NEXT_PUBLIC_COGNITO_CLIENT_ID=

# AWS Region (REQUIRED)
NEXT_PUBLIC_AWS_REGION=us-east-1

# Static Profile Pre-rendering (OPTIONAL)
# Comma-separated list of usernames to pre-render for static exports
NEXT_PUBLIC_STATIC_PROFILE_USERNAMES=

# Environment metadata (REQUIRED)
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_FEEDBACK_URL=https://awscommunityhub.org/beta-feedback
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_USE_PREACT=false

