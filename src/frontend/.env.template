# ===================================
# Frontend Environment Configuration
# ===================================
# Copy this file to .env.local for local development
# For production, set these in your deployment environment

# API Configuration (REQUIRED)
# The backend API endpoint URL
# Local development: http://localhost:3001
# Production: Your deployed API Gateway URL
NEXT_PUBLIC_API_URL=http://localhost:3001

# Site Configuration (OPTIONAL)
# The public URL of your frontend application
# Used for canonical URLs and Open Graph metadata
NEXT_PUBLIC_SITE_URL=https://aws-community-hub.com

# AWS Cognito Configuration (OPTIONAL)
# Required only if using Cognito authentication
# Leave empty if not using authentication features
NEXT_PUBLIC_COGNITO_USER_POOL_ID=
NEXT_PUBLIC_COGNITO_CLIENT_ID=

# AWS Region (OPTIONAL - defaults to us-east-1)
# The AWS region where your resources are deployed
NEXT_PUBLIC_AWS_REGION=us-east-1

# ===================================
# Common Configuration Examples
# ===================================
# Local Development:
#   NEXT_PUBLIC_API_URL=http://localhost:3001
#
# Production:
#   NEXT_PUBLIC_API_URL=https://api.example.com
#   NEXT_PUBLIC_SITE_URL=https://example.com
#   NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
#   NEXT_PUBLIC_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
#   NEXT_PUBLIC_AWS_REGION=us-east-1
