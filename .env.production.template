# Copy this to .env.production and fill with real values
# NEVER commit .env.production to git

AWS_REGION=us-east-1
AWS_ACCOUNT_ID=YOUR_ACCOUNT_ID
ENVIRONMENT=prod
DATABASE_NAME=community_content
VPC_NAT_GATEWAYS=1

# Database (set by CDK deployment)
DATABASE_SECRET_ARN=
DATABASE_URL=
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT_MS=30000
DATABASE_POOL_CONNECTION_TIMEOUT_MS=60000

# Cognito
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_REGION=us-east-1
COGNITO_CALLBACK_URLS=https://yourdomain.com/callback
COGNITO_LOGOUT_URLS=https://yourdomain.com/logout
TOKEN_VERIFICATION_TIMEOUT_MS=3000
MFA_TOTP_SEED=
AUTH_RATE_LIMIT_PER_MINUTE=1000

# CORS
CORS_ORIGIN=https://yourdomain.com
CORS_ALLOW_HEADERS=Authorization,Content-Type
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_MAX_AGE=600
CORS_CREDENTIALS=true

# Feature flags
ENABLE_BETA_FEATURES=false

# Rate limiting
RATE_LIMIT_ANONYMOUS=100
RATE_LIMIT_AUTHENTICATED=1000
RATE_LIMIT_WINDOW_MINUTES=1
STATS_CACHE_TTL=60
ANALYTICS_RETENTION_DAYS=730
API_GW_THROTTLE_RATE_LIMIT=100
API_GW_THROTTLE_BURST_LIMIT=200
API_GW_DATA_TRACE_ENABLED=false

# Synthetic monitoring
SYNTHETIC_URL=https://yourdomain.com
MONITORING_ERROR_RATE_THRESHOLD=0.01
MONITORING_P99_LATENCY_MS=1000
MONITORING_DB_CONNECTION_THRESHOLD=70
MONITORING_DLQ_THRESHOLD=1
MONITORING_DAILY_COST_THRESHOLD=500
MONITORING_SYNTHETIC_AVAILABILITY_THRESHOLD=99
MONITORING_BILLING_REGION=us-east-1

# External services
YOUTUBE_API_KEY=
GITHUB_TOKEN=
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=amazon.titan-embed-text-v1

# Production URLs
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_COGNITO_CLIENT_ID=
NEXT_PUBLIC_COGNITO_USER_POOL_ID=
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_ENVIRONMENT=prod
NEXT_PUBLIC_FEEDBACK_URL=https://yourdomain.com/feedback
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_USE_PREACT=false

# Blue/Green Routing (optional)
# BLUE_GREEN_DOMAIN_NAME=app.yourdomain.com
# BLUE_GREEN_HOSTED_ZONE_ID=Z1234567890123
# BLUE_GREEN_HOSTED_ZONE_NAME=yourdomain.com
# BLUE_GREEN_WEIGHT_BLUE=0
# BLUE_GREEN_WEIGHT_GREEN=100
